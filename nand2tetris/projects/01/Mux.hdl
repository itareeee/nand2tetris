/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=nSel);
    And(a=a, b=nSel, out=adjustedA);
    And(a=b, b=sel, out=adjustedB);
    Or(a=adjustedA, b=adjustedB, out=out);
}
